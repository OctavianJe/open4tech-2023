<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="match_width_wrap_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="full_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="full_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--    Explanation: mg = margin, 8dp, left top right, wrap match (first height, second width) -->
    <style name="mg8_lr_wm" parent="@style/match_width_wrap_height">
        <item name="android:layout_marginLeft">@dimen/small_100</item>
        <item name="android:layout_marginRight">@dimen/small_100</item>
    </style>

    <!--    Explanation: mg = margin, 8dp, left top right, wrap wrap (first height, second width) -->
    <style name="mg8_ltr_wm" parent="@style/match_width_wrap_height">
        <item name="android:layout_marginLeft">@dimen/small_100</item>
        <item name="android:layout_marginTop">@dimen/small_100</item>
        <item name="android:layout_marginRight">@dimen/small_100</item>
    </style>

    <style name="TransparentDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


</resources>